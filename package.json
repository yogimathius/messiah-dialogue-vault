{
  "name": "messiah-dialogue-vault",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Full-stack messianic dialogue vault with MCP server",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "db:generate": "pnpm --filter @vault/db generate",
    "db:migrate": "pnpm --filter @vault/db migrate",
    "db:studio": "pnpm --filter @vault/db studio",
    "mcp:server": "pnpm --filter @vault/mcp server",
    "mcp:example": "pnpm --filter @vault/mcp example"
  },
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.21.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
